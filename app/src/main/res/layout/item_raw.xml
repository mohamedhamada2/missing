<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/user_image_bg"
            android:src="@drawable/ic_person"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="mmmm"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="@font/myfont"
                    android:text="نظارة شمسية"
                    android:layout_gravity="right"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/calender_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/calender_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/missing_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/3/2019"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:layout_toLeftOf="@+id/calender_img"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/location_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_location_on"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="جامعة القصيم"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:layout_toLeftOf="@+id/location_img"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_add_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="اضافة تعليق"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/category_img"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp">
            </ImageView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
