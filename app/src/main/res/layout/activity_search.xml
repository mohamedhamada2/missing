<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Search.SearchActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back"
                android:onClick="Back"
                android:contentDescription="back"/>
            <TextView
                android:id="@+id/txt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/search"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/myfont"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_search"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:drawableEnd="@drawable/ic_search"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/et_search_background2"
                android:layout_marginBottom="20dp"
                android:hint="@string/search"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:fontFamily="@font/myfont"
                android:textStyle="normal"/>
        </RelativeLayout>
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:id="@+id/txt_govern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/choosegovern"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfont"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:id="@+id/linear_governs_type"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/et_search_background">
                    <Spinner
                        android:id="@+id/spinner_govern_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:autofillHints="@string/choostype"
                        android:backgroundTint="@color/colorPrimary" />
                </LinearLayout>
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/city"
            android:textStyle="normal"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/myfont"
            android:layout_centerVertical="true"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/linear_city_type"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/et_search_background">
            <Spinner
                android:id="@+id/spinner_city_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:autofillHints="@string/choostype"
                android:backgroundTint="@color/colorPrimary" />
        </LinearLayout>
    </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <Button
                    android:id="@+id/btn_missing"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_background"
                    android:text="@string/missing"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/myfont"
                    android:textStyle="bold"
                    android:onClick="GetMissingItems"/>
                <Button
                    android:id="@+id/btn_existing"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/et_search_background"
                    android:text="@string/existing"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/myfont"
                    android:textStyle="bold"
                    android:onClick="GetExistingItems"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
</LinearLayout>
    </ScrollView>

</LinearLayout>